<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.alain.mk.mygestion.register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/register_activity_firebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userphoto"
                android:layout_gravity="center"
                android:tag="10"
                android:layout_marginTop="0dp"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_activity_nameInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:drawableStart="@drawable/person"
            android:layout_margin="@dimen/default_large_margin"
            android:inputType="text"
            android:hint="@string/username"
            android:textColor="@color/colordark"
            android:textColorHint="@color/darker_gray"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/register_activity_inputNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:drawableStart="@drawable/phone"
            android:layout_margin="@dimen/default_large_margin"
            android:inputType="phone"
            android:hint="@string/phone_number"
            android:textColor="@color/colordark"
            android:textColorHint="@color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <Button
            android:id="@+id/register_activity_button_register"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_radius_primary_col"
            android:textColor="#fff"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="@dimen/default_large_margin"
            android:text="@string/sign_up" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>