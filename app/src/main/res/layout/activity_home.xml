<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity_coordinator_layout"
    android:background="#E4E4E4"
    android:orientation="vertical"
    tools:context="com.alain.mk.mygestion.HomeActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="65dp">

        <ImageView
            android:id="@+id/register_activity_firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userphoto"
            android:layout_gravity="center"
            android:tag="10"
            android:layout_marginTop="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/martine_bold"
            android:text="Bienvenu sur"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="45sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/martine_bold"
            android:gravity="center"
            android:text="Alter Ego"
            android:textColor="@color/colorPrimary"
            android:textSize="45sp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>